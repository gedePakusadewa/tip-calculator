				error_list[0] = bill_input;
			}

			console.log(error_list[0]);
		}

		function is_billInputValid(data){
			var isNumber = /^\d+$/.test(parseInt(data));
			return (isNumber ? "true" : "Please insert bill input correctly");
		} 

